---
// Props 
type Props = {
    title?: string
}
const {title = "Navigate Through AvatarArchives!"} = Astro.props;
---

<section>
    <div class="background-todo w-full md:h-screen py-auto my-auto">
        <!-- hero  -->
        <section
            class="flex justify-center items-center h-screen bg-gradient-to-b via-primary-dark/20  from-primary/30 from-10% to-55% to-transparent"
        >
            <div class="mb-9 flex flex-col mx-auto max-w-3xl justify-between">
                <h1 class="text-center break-words font-semibold md:text-5xl text-3xl">
                    {title}
                </h1>
                <form action="/search" method="get">
                    <input
                        class="py-3 px-4 block w-5/6 md:w-full mx-auto backdrop-blur-sm bg-white/10 shadow-md outline-none my-3 rounded-md"
                        name="query"
                        placeholder="Explore Avatar Archives..."
                    />
                </form>
            </div>
        </section>
    </div>
</section>
